@model ListMyOffersViewModel
@using System.Security.Claims

<div class="row mt-2 mb-4 justify-content-center">
    <section class="tiles">
        @foreach (var offer in @Model.Offers)
        {
            
            @if (offer.Make != null)
            {
                <article>
                    <span class="image">
                        <img src="@offer.Image" alt="" />
                    </span>
                    <a href="/Offers/VehicleDetails?offerId=@offer.Id">
                        <h2>@offer.Make @offer.Model </h2>

                        <p><strong>@offer.Price &euro;</strong></p>

                        <p>
                            <i class="fas fa-gas-pump"></i> @offer.EngineType &nbsp;&nbsp;&nbsp;&nbsp;
                            <i class="far fa-calendar-alt"></i> @offer.ManufactoringYear&nbsp;&nbsp;&nbsp;&nbsp;
                            <i class="fas fa-palette"></i> @offer.Color
                        </p>
                    </a>
                </article>
            }
            else
            {
                <article>
                    <span class="image">
                        <img src="@offer.Image" alt="" />
                    </span>
                    <a href="/Offers/PartDetails?offerId=@offer.Id">
                        <h2>@offer.Title </h2>

                        <p><strong>@offer.Price &euro;</strong></p>

                        <p>
                            <i class="fa fa-info-circle"></i> @offer.Status &nbsp;&nbsp;&nbsp;&nbsp;
                        </p>
                    </a>
                </article>

            }

        }
    </section>
</div>