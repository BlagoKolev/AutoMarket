@model ListMyOffersViewModel
@using System.Security.Claims

<div class="row mt-2 mb-4 justify-content-center">
    @foreach (var offer in @Model.Offers)
    {

        <div class="card col-6 col-lg-3 game-card mx-2 my-2">
            <img src="@offer.Image"
                 class="card-img-top img-fluid card-image rounded" data-toggle="tooltip"
                 data-placement="bottom" title="">
            @if (offer.Make != null)
            {
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">Марка: @offer.Make </li>
                        <li class="bg-secondary col-sm">Модел: @offer.Model</li>
                        <li class="bg-secondary col-sm">Цвят: @offer.Color</li>
                        <li class="bg-secondary col-sm">Цена: @offer.Price лв.</li>
                        <li class="bg-secondary col-sm">Създадена на: @offer.CreatedOn.Date.ToString("dd/MM/yyyy")</li>
                    </ul>
                    <hr />
                    <a href="/Offers/VehicleDetails?offerId=@offer.Id" class="btn btn-block btn-primary"><i class="fas fa-info-circle"></i> Разгледай обявата</a>
                    @if (User.FindFirst(ClaimTypes.NameIdentifier).Value == offer.OwnerId || User.IsInRole("Admin"))
                    {
                        <a href="/Offers/EditVehicle?offerId=@offer.Id" class="btn btn-block btn-warning"><i class="far fa-edit"></i> Редактирай</a>
                        <a href="/Offers/Delete?offerId=@offer.Id" class="btn btn-block btn-danger"><i class="fas fa-trash-alt"></i> Изтрий</a>
                    }
                </div>
            }
            else
            {
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-center">Наименование: @offer.Name </li>
                        <li class="bg-secondary col-sm">Състояние: @offer.Status</li>
                        <li class="bg-secondary col-sm">Цена: @offer.Price лв.</li>
                        <li class="bg-secondary col-sm">Създадена на: @offer.CreatedOn.Date.ToString("dd/MM/yyyy")</li>
                    </ul>
                    <hr />
                    <a href="/Offers/PartDetails?offerId=@offer.Id" class="btn btn-block btn-primary"><i class="fas fa-info-circle"></i> Разгледай обявата</a>
                    @if (User.FindFirst(ClaimTypes.NameIdentifier).Value == offer.OwnerId || User.IsInRole("Admin"))
                    {
                        <a href="/Offers/EditVehicle?offerId=@offer.Id" class="btn btn-block btn-warning"><i class="far fa-edit"></i> Редактирай</a>
                        <a href="/Offers/Delete?offerId=@offer.Id" class="btn btn-block btn-danger"><i class="fas fa-trash-alt"></i> Изтрий</a>
                    }
                </div>
            }
        </div>
    }
</div>