@model BecomeDealerViewModel
<div class="row">
    <div class="col-75">
        <div class="container">
            <form method="post" asp-controller="Users" asp-action="BecomeDealer" >
                <div class="row">
                    <div class="col-50">
                        <h3>User Info</h3>
                        <label asp-for="UserEmail"><i class="fa fa-envelope"></i>E-mail</label>
                        <input asp-for="UserEmail" type="text"  name="UserEmail" placeholder="john@example.com">
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                        <label asp-for="DealerName"><i class="fa fa-envelope"></i>Dealer Name</label>
                        <input asp-for="DealerName" type="text" name="DealerName">
                        <span asp-validation-for="DealerName" class="text-danger"></span>
                    </div>
                    <div class="col-50">
                        <h3>Payment</h3>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>
                        <label asp-for="CardHolder"></label>
                        <input asp-for="CardHolder" type="text" id="cname" name="CardHolder" placeholder="John More Doe">
                        <span asp-validation-for="CardHolder" class="text-danger"></span>
                        <label asp-for="CardNumber"></label>
                        <input asp-for="CardNumber" type="text" id="ccnum" name="CardNumber" placeholder="1111-2222-3333-4444">
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                        <div class="row">
                            <div class="col-50">
                                <label asp-for="CardExpiredYear"></label>
                                <input asp-for="CardExpiredYear" type="text" name="CardExpiredYear" placeholder="2021">
                                <span asp-validation-for="CardExpiredYear" class="text-danger"></span>
                            </div>
                            <div class="col-50">
                                <label asp-for="CardExpiredMonth"></label>
                                <input asp-for="CardExpiredMonth" type="number" name="CardExpiredMonth" placeholder="1-12">
                                <span asp-validation-for="CardExpiredMonth" class="text-danger"></span>
                            </div>
                            <div class="col-50">
                                <label asp-for="CVV"></label>
                                <input asp-for="CVV" type="number" name="CVV" placeholder="123">
                                <span asp-validation-for="CVV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                    <input type="submit" name="name" value="Become Dealer" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}