@model ListUsersAllViewModel
@{
    ViewData["Title"] = "Списък на потребителите";
    var count = 1;
}
<h2>Списък с потребителски акаунти</h2>
<table class="table table-dark table-striped btn-table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User</th>
            <th scope="col">E-mail</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var account in Model.Users)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@account.Username</td>
                <td>@account.Email</td>
                <td>
                    <input type="button" class="btn btn-light" value="Details" onclick="location.href='@Url.Action("Details", "Users", new { userId = account.Id })'" />
                    <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit", "Users", new { userId = account.Id })'" />
                    <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("Delete", "Users", new { userId = account.Id })'" />
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

