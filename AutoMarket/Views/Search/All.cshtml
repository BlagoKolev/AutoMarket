@model SearchVehicleViewModel

@{
    ViewData["Title"] = "Търсене в обяви за автомобили";
}

<h3 class="text-center">Търси в обяви за автомобили по 'Марка' и 'Модел'</h3>

<form method="get">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-xl-9">
            <div>
                <label asp-for="Make"></label>
                <select class="form-group" name="Make">
                    <option value="">Всички</option>
                    @foreach (var make in Model.Makes)
                    {
                        <option value="@make">@make</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="VehicleModel"></label>
                <input class="form-group" type="text" asp-for="VehicleModel" value="" id="VehicleModel" placeholder="Въведи модел" />
            </div>
            <div class="form-group">
                <i class="fas fa-search icon-large"></i>
                <input type="submit" class="btn btn-primary" value="Търси" />
            </div>
        </div>
    </div>
</form>
<hr />
<h2 class="text-center">Намерени обяви</h2>
<partial name="_VehicleAllPartial" model="@Model" />
<hr />
<partial name="_PagingPartial" model="@Model" />
