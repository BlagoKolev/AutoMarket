@model AutoMarket.Models.Offers.CreateVehicleOfferViewModel
@{

    ViewData["Title"] = "Добави нова обява";
}

<h3>Създай своята обява тук</h3>
<div class="text-center" >
    <form method="post" class="col-md-6" asp-controller="Offers" asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Make"></label>
            <input asp-for="Make" class="form-control" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control"  />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ManufacturingYear"></label>
            <input asp-for="ManufacturingYear"class="form-control"/>
            <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BodyType"></label>
            <select  asp-for="BodyType" class="form-control">
                <option value="value">Ван</option>
                <option value="value">Джип</option>
                <option value="value">Комби</option>
                <option value="value">Купе</option>
                <option value="value">Кабрио</option>
                <option value="value">Пикап</option>
                <option value="value">Седан</option>
                <option value="value">Лимузина</option>
                <option value="value">Хечбек</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="EngineCapacity"></label>
            <input asp-for="EngineCapacity" class="form-control" />
            <span asp-validation-for="EngineCapacity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HorsePower"></label>
            <input  asp-for="HorsePower" class="form-control" >
            <span asp-validation-for="HorsePower" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EngineType"></label>
            <select asp-for="EngineType" class="form-control" >
                <option value="value">Бензинов</option>
                <option value="value">Диезелов</option>
                <option value="value">Електрически</option>
                <option value="value">Хибриден</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Transmission"></label>
            <select asp-for="Transmission" class="form-control" >
                <option value="value">Автоматична</option>
                <option value="value">Ръчна</option>
                <option value="value">Полуавтоматична</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Мileage"></label>
            <input asp-for="Мileage" class="form-control" />
            <span asp-validation-for="Мileage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Color"></label>
            <select asp-for="Color" class="form-control" >
                <option value="value">Червен</option>
                <option value="value">Син</option>
                <option value="value">Жълт</option>
                <option value="value">Зелен</option>
                <option value="value">Бял</option>
                <option value="value">Бежов</option>
                <option value="value">Бордо</option>
                <option value="value">Бронз</option>
                <option value="value">Виолетов</option>
                <option value="value">Вишнев</option>
                <option value="value">Графит</option>
                <option value="value">Златист</option>
                <option value="value">Керемиден</option>
                <option value="value">Лилав</option>
                <option value="value">Металик</option>
                <option value="value">Оранджев</option>
                <option value="value">Перла</option>
                <option value="value">Пепел от рози</option>
                <option value="value">Пясъчен</option>
                <option value="value">Розов</option>
                <option value="value">Светло син</option>
                <option value="value">Сив</option>
                <option value="value">Черен</option>
                <option value="value">Хамелеон</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="EuroStandart"></label>
            <select asp-for="EuroStandart" class="form-control" >
                <option value="value">Евро 1</option>
                <option value="value">Евро 2</option>
                <option value="value">Евро 3</option>
                <option value="value">Евро 4</option>
                <option value="value">Евро 5</option>
                <option value="value">Евро 6</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Добави обява" />
    </form>

</div>
