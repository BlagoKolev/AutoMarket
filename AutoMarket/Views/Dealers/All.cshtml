@model ListMyOffersViewModel
@{ 
    ViewData["Title"] = "Търсене по Дилъри"; 
}
<h3>Тук можете да намерите всички обяви на избраният от вас Дилър</h3>
<form method="get">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-xl-9">
            <div>
                <label asp-for="DealerName"></label>
                <select class="form-group" name="DealerName">
                    <option value="">Всички</option>
                    @foreach (var dealer in Model.DealersList)
                    {
                        <option value="@dealer">@dealer</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <i class="fas fa-search icon-large"></i>
                <input type="submit" class="btn btn-primary" value="Покажи"/>
            </div>
        </div>
    </div>
</form>
<hr />
<partial name="_AllOffersPartial" model="@Model"/>
<hr />
<partial name="_PagingPartial" model="@Model"/>