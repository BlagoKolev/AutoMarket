<div class="inner">
    <h1>@Model.Make @Model.Model <span class="pull-right">&euro; @Model.Price</span></h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-7">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        @for (int i = 1; i < Model.Images.ToArray().Length; i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.Images.ToArray()[0]" alt="First slide">
                        </div>
                        @for (int i = 1; i < Model.Images.ToArray().Length; i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.Images.ToArray()[i]" alt="@i slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="col-lg-5">
                <h3>Vehicle Description</h3>

                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
<br>

<form action="#">
    <div class="fields">

        <div class="field quarter">
            <label class="m-n">Make</label>

            <input type="text" readonly="" value="@Model.Make">
        </div>

        <div class="field quarter">
            <label class="m-n">Model</label>

            <input type="text" readonly="" value="@Model.Model">
        </div>

        <div class="field quarter">
            <label class="m-n">First registration</label>

            <input type="text" readonly="" value="@Model.ManufacturingYear">
        </div>

        <div class="field quarter">
            <label class="m-n">Mileage</label>

            <input type="text" readonly="" value="@Model.Мileage km">
        </div>

        <div class="field quarter">
            <label class="m-n">Fuel</label>

            <input type="text" readonly="" value="@Model.EngineType">
        </div>

        <div class="field quarter">
            <label class="m-n">Engine size</label>

            <input type="text" readonly="" value="@Model.EngineCapacity cc">
        </div>

        <div class="field quarter">
            <label class="m-n">Power</label>

            <input type="text" readonly="" value="@Model.HorsePower hp">
        </div>

        <div class="field quarter">
            <label class="m-n">Transmission</label>

            <input type="text" readonly="" value="@Model.Transmission">
        </div>

        <div class="field quarter">
            <label class="m-n">Euro standart</label>

            <input type="text" readonly="" value="@Model.EuroStandart">
        </div>

        <div class="field quarter">
            <label class="m-n">Body type</label>

            <input type="text" readonly="" value="@Model.BodyType">
        </div>

        <div class="field quarter">
            <label class="m-n">Color</label>

            <input type="text" readonly="" value="@Model.Color">
        </div>
    </div>
</form>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <h3>Contact Details</h3>

            <ul class="alt">
                <li><span class="fa fa-map-marker"></span> @Model.Location</li>
                <li><span class="fa fa-mobile-phone"></span>  @Model.Phone </li>
                <li><span class="fa fa-envelope-o"></span> <a href="#">@Model.Email</a></li>
            </ul>
        </div>
    </div>
</div>